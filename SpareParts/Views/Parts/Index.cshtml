@{
  Layout = "_Layout";
}

@using SpareParts.Models;
@model List<SpareParts.Models.Part>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No parts have been added yet!</h3>
} 

@foreach (Part part in Model)
{
  <li>@Html.ActionLink($"{parts.Description}", "Details", new { id = part.PartId }) | @part.Vehicle.Model</li>
}

<p>@Html.ActionLink("Add new part", "Create")</p>
@{
  Layout = "_Layout";
}

@using SpareParts.Models;

<h1>Vehicles</h1>

if (@Model.Count == 0)
{
  <h3>No Cars To View</h3>
}

<ul>
  @foreach(Vehicle vehicle in Model)
  {
    <li>@Html.ActionLink($"{vehicle.Model}", "Details", new { id = vehicle.VehicleId }) </li>
  }
</ul>

<p>@Html.ActionLink("Add a Vehicle", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>